        <InputText id="firstName" @bind-Value="BookingToEdit.FirstName" />

        <label for="lastName">LastName</label>
        <InputText id="lastName" @bind-Value="BookingToEdit.LastName" />


        <button type="submit">Submit</button>*@

    </EditForm>
}